{
  "name": "music_player",
  "version": "1.0.0",
  "engines": {
    "node": ">=10.16.0"
  },
  "description": "A well designed and beautiful music player build from the ground",
  "main": "main.js",
  "author": "Amit",
  "license": "GPL-3.0",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "music-player",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "NSIS",
        "Portable"
      ],
      "icon": "Icon.ico"
    }
  },
  "dependencies": {
    "microsoft-cognitiveservices-speech-sdk": "^1.6.0"
  },
  "devDependencies": {
    "electron-builder": "^22.4.1",
  }
}
